<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttoncustom_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_botao_default"
    android:paddingVertical="@dimen/space3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buttoncustom_imageStart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space0"
        android:contentDescription="@string/imagembotao"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/buttoncustom_text"
        app:layout_constraintEnd_toStartOf="@+id/buttoncustom_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttoncustom_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/buttoncustom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/valor"
        android:textAppearance="@style/textAppearanceBoldWhite12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttoncustom_imageStart"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />

</androidx.constraintlayout.widget.ConstraintLayout>